<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Fondo del ítem cuando está seleccionado -->
        <item android:state_checked="true">
            <layer-list>
                <item android:bottom="0dp">
                    <shape android:shape="rectangle">
                        <solid android:color="@android:color/transparent" />
                    </shape>
                </item>
                <item android:bottom="0dp">
                    <shape android:shape="rectangle">
                        <size android:height="4dp" /> <!-- Grosor de la línea -->
                        <solid android:color="@color/navbar_activo" /> <!-- Color rosado de la línea -->
                    </shape>
                </item>
            </layer-list>
        </item>

        <!-- Fondo del ítem cuando no está seleccionado -->
        <item>
            <shape android:shape="rectangle">
                <solid android:color="@android:color/transparent" />
            </shape>
        </item>
    </selector>

