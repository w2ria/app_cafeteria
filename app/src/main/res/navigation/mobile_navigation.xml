<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/welcome">

    <fragment
        android:id="@+id/welcome"
        android:name="com.utp.app_cafeteria.presentation.view.auth.WelcomeFragment"
        tools:layout="@layout/fragment_welcome" />

    <fragment
        android:id="@+id/register"
        android:name="com.utp.app_cafeteria.presentation.view.auth.RegisterFragment"
        tools:layout="@layout/fragment_register" />

    <fragment
        android:id="@+id/login"
        android:name="com.utp.app_cafeteria.presentation.view.auth.LoginFragment"
        tools:layout="@layout/fragment_login" />

    <fragment
        android:id="@+id/navigation_inicio"
        android:name="com.utp.app_cafeteria.presentation.view.screens.home.InicioFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_inicio" />

    <fragment
        android:id="@+id/navigation_buscar"
        android:name="com.utp.app_cafeteria.presentation.view.screens.search.BuscarFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_buscar"/>

    <fragment
        android:id="@+id/navigation_ordenes"
        android:name="com.utp.app_cafeteria.presentation.view.screens.order.OrdenesFragment"
        android:label="@string/title_order"
        tools:layout="@layout/fragment_ordenes"/>

    <fragment
        android:id="@+id/navigation_perfil"
        android:name="com.utp.app_cafeteria.presentation.view.screens.profile.PerfilFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_perfil"/>

    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.utp.app_cafeteria.presentation.view.screens.cart.CartFragment"
        tools:layout="@layout/fragment_cart" />

</navigation>